{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Configure (CMake)",
        "type": "shell",
        "command": "cmake -B build -G Ninja -S .",
        "problemMatcher": []
      },
      {
        "label": "Clean",
        "type": "shell",
        "command": "rd /s /q build",
        "presentation": {
          "reveal": "always"
        },
      },
      {
        "label": "Build (ninja)",
        "type": "shell",
        "command": "ninja -C build",
        "dependsOn": ["Configure (CMake)"],
        "problemMatcher": []
      },
      {
        "label": "Run",
        "type": "shell",
        "command": "./build/ArraySorterTask.exe",
        "presentation": {
          "reveal": "always"
        }
      },
      {
        "label": "Run tests",
        "type": "shell",
        "command": "./tests/test_args.bat",
        "presentation": {
          "reveal": "always"
        }
      },
      {
        "label": "Print test",
        "type": "shell",
        "command": "./tests/test_print.bat",
        "presentation": {
          "reveal": "always"
        }
      }
    ]
  }
  